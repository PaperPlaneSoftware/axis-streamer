{
  "name": "local",
  "version": "0.0.1",
  "description": "Stream aggregator for axis-neuron",
  "author": "Oliver Winks",
  "license": "MIT",
  "scripts": {
    "dev:build": "tsc --watch",
    "dev": "concurrently \"yarn dev:build\" \"nodemon dist/index.js\"",
    "build": "tsc && yarn workspace local-webui build",
    "pkg": "yarn build && pkg dist/bundle.js --out-path bin/",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@types/cors": "^2.8.10",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "minimist": "^1.2.5",
    "rxjs": "^6.6.6",
    "socket.io-client": "^4.0.0",
    "winston": "^3.3.3",
    "shared": "^0.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/minimist": "^1.2.1",
    "@types/node": "^14.14.35",
    "concurrently": "^6.0.0",
    "nodemon": "^2.0.7",
    "typescript": "^4.2.3"
  }
}
