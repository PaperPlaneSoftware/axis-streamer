{
  "appId": "com.goldsmithsMocap.mocapStreamer",
  "asar": true,
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist"
  ],
  "mac": {
    "artifactName": "${productName} ${version}.${ext}",
    "icon": "icon.png",
    "category": "public.app-category.utilities",
    "target": [
      "dmg"
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "icon.png",
    "artifactName": "${productName} ${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  }
}
